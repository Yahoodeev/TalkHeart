<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ysy.talkheart">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.WelcomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppCompatFullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppCompatFullScreen" />
        <activity
            android:name=".activities.RegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppCompatFullScreen" />
        <activity
            android:name=".activities.HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.WriteActivity"
            android:label="@string/write_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".activities.DraftActivity"
            android:label="@string/draft_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MarkActivity"
            android:label="@string/mark_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ActiveActivity"
            android:label="@string/me_active"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.WatchActivity"
            android:label="@string/me_watch"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.FansActivity"
            android:label="@string/me_fans"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.PersonActivity"
            android:label="@string/content_loading"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.SearchActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.FeedbackActivity"
            android:label="@string/feedback_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.CommentActivity"
            android:label="@string/comment_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ReplyActivity"
            android:label="@string/reply_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".activities.ModifyActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppCompatFullScreen" />
    </application>

</manifest>