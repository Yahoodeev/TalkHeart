<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ysy.talkheart">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.ysy.talkheart.activities.WelcomeActivity"
            android:theme="@style/AppCompatFullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ysy.talkheart.activities.LoginActivity"
            android:theme="@style/AppCompatFullScreen" />
        <activity
            android:name="com.ysy.talkheart.activities.RegisterActivity"
            android:theme="@style/AppCompatFullScreen" />
        <activity android:name="com.ysy.talkheart.activities.HomeActivity" />
        <activity
            android:name="com.ysy.talkheart.activities.WriteActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity android:name="com.ysy.talkheart.activities.DraftActivity" />
        <activity android:name="com.ysy.talkheart.activities.MarkActivity"></activity>
    </application>

</manifest>