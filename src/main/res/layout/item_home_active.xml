<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:elevation="4dp"
    android:foreground="?attr/selectableItemBackground"
    app:contentPadding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.ysy.talkheart.views.CircularImageView
                    android:id="@+id/home_active_avatar_img"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/me_avatar_boy" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/home_active_nickname_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/content_loading"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/home_active_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/home_active_time"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/home_active_text_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/home_active_text" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="6dp">

            <ImageView
                android:id="@+id/home_active_good_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/home_active_good_num_tv"
                android:layout_toStartOf="@+id/home_active_good_num_tv"
                android:src="@mipmap/ic_favorite_blue_circle_36dp" />

            <TextView
                android:id="@+id/home_active_good_num_tv"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:text="@string/home_active_good_num" />

            <ImageView
                android:id="@+id/home_active_reply_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/home_active_good_img"
                android:layout_toStartOf="@+id/home_active_good_img"
                android:src="@drawable/ic_reply_pink_24dp" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
